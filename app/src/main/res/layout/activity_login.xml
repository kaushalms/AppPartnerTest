<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.apppartner.androidprogrammertest.LoginActivity">

    <include
        layout="@layout/toolbar"
        />

    <EditText
        android:id="@+id/userName"
        android:layout_width="@dimen/login_text_width"
        android:layout_height="@dimen/login_text_height"
        android:layout_marginTop="150dp"
        android:background="@drawable/graphic_input"
        android:hint="username"
        android:padding="@dimen/login_text_padding"
        android:textSize="11pt"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:textColor="#010101" />

    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/login_text_width"
        android:layout_height="@dimen/login_text_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/graphic_input"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="@dimen/login_text_padding"
        android:textSize="11pt"
        android:layout_below="@+id/userName"
        android:layout_alignLeft="@+id/loginImageButton"
        android:layout_alignStart="@+id/loginImageButton"
        android:textColor="#010101" />

    <ImageButton
        android:id="@+id/loginImageButton"
        android:layout_width="@dimen/login_button_width"
        android:layout_height="@dimen/login_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_login" />

</RelativeLayout>
